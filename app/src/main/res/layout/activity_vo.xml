<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggame2">

    <RelativeLayout
        android:id="@+id/ball1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="655dp"
        android:layout_marginTop="-200dp"
        android:background="@drawable/buble">

        <TextView
            android:id="@+id/str1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Thongsomboon"
            android:textColor="#000"
            android:textSize="25sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ball3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="460dp"
        android:layout_marginTop="-200dp"
        android:background="@drawable/buble">

        <TextView
            android:id="@+id/str3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="รองพระบาท "
            android:textColor="#000"
            android:textSize="25sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ball2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="-200dp"
        android:background="@drawable/buble">

        <TextView
            android:id="@+id/str2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Thongsomboon"
            android:textColor="#000"
            android:textSize="25sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <ProgressBar
            android:id="@+id/pbTimer"
            style="@style/AppTheme"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Time"
            android:textSize="30sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/y_scrode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/count_score"
        android:text=" 0 "
        android:textSize="50sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/count_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/btn_pause"
        android:text=" / 4"
        android:textSize="50sp"
        android:visibility="invisible"></TextView>

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_pause"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="500dp"
        android:background="@drawable/base"
        android:visibility="invisible" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/bar"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@drawable/pausestage"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/quustion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Answer"
            android:textColor="#000000"
            android:textSize="30sp"
            android:visibility="invisible" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_back"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_next"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/count_before"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b3b2b2"
        android:gravity="center_horizontal"
        android:text="3"
        android:textColor="#ffffff"
        android:textSize="500sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/namegame"
            android:layout_width="700dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/ribboncolor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1"
            android:background="@drawable/button_startgame" />

        <Button
            android:id="@+id/btn_explain"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:layout_weight="0.1"
            android:background="@drawable/button_desrition" />
    </LinearLayout>

</RelativeLayout>
