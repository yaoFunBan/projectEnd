<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scene2_1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background" />

    <ImageView
        android:id="@+id/box4_1"
        android:layout_width="650dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:rotationX="90"
        android:src="@drawable/box1_3" />


    <ImageView
        android:layout_width="1300dp"
        android:layout_height="420dp"
        android:layout_above="@+id/layout_bottom"
        android:layout_centerHorizontal="true"
        android:background="@drawable/book4_1" />

    <ImageView
        android:id="@+id/forest"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/forest4_1"
        android:rotationX="90" />


    <ImageView
        android:id="@+id/home"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="280dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/animhome"
        android:rotationX="90" />

    <ImageView
        android:id="@+id/horus"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/house41"
        android:rotationX="90" />

    <ImageView
        android:id="@+id/yotwimon"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginLeft="335dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/yoksawi41"
        android:rotationX="90" />

    <ImageView
        android:id="@+id/jantra"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="450dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/janta41"
        android:rotationX="90" />

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_next"
            android:enabled="false"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_back"
            android:enabled="false"
            android:visibility="invisible" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_pause" />
</RelativeLayout>