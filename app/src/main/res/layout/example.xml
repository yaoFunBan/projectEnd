<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="490dp"
        android:layout_height="630dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/example1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7" />

            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|center"
                android:layout_weight="1.35">

                <ImageView
                    android:id="@+id/janta1"
                    android:layout_width="120dp"
                    android:layout_height="280dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/animate_janta1_1" />

                <ImageView
                    android:id="@+id/figer1"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_alignBottom="@+id/janta1"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/janta1"
                    android:background="@drawable/animate_figer" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>