<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kimhuang.project.game3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/game3" />


    <ImageView
        android:layout_width="750dp"
        android:layout_height="550dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="270dp"
        android:src="@drawable/paper" />

    <TextView
        android:id="@+id/quustion"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="60dp"
        android:text="Question"
        android:textSize="70dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp" />

    <ImageView
        android:id="@+id/boxmess1"
        android:layout_width="620dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/boxmess" />

    <TextView
        android:id="@+id/Anstrue"
        android:layout_width="540dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="70dp"
        android:text="Answertrue"
        android:textSize="30dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/boxmess2"
        android:layout_width="620dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/boxmess" />

    <TextView
        android:id="@+id/Ansfalse"
        android:layout_width="540dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="50dp"
        android:text="Answerfalse"
        android:padding="10dp"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_pause" />

    <Button
        android:id="@+id/btn_play_story"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/btn_pause"
        android:background="@drawable/button_again" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp">

        <ProgressBar
            android:id="@+id/pbTimer"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="0"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="เวลา"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:text="วินาที"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout>
