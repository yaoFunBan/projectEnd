<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.donnapa.fairytale.scene3_2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imgSun"
        android:layout_width="700dp"
        android:layout_height="320dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="310dp"
        android:rotationX="90"
        android:scaleType="fitXY"
        android:src="@drawable/box3_2" />

    <ImageView
        android:id="@+id/book3_1"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:src="@drawable/book3_2" />

    <ImageView
        android:id="@+id/waterfall"
        android:layout_width="450dp"
        android:layout_height="230dp"
        android:layout_alignEnd="@id/imgSun"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="110dp"
        android:rotationX="90"
        android:scaleType="fitXY"
        android:src="@drawable/fall" />

    <ImageView
        android:id="@+id/trees"
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="550dp"
        android:layout_marginTop="110dp"
        android:rotationX="90"
        android:src="@drawable/trees" />


    <ImageView
        android:id="@+id/tree"
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="290dp"
        android:layout_marginTop="110dp"
        android:rotationX="90"
        android:src="@drawable/trees" />


    <ImageView
        android:id="@+id/wood"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="420dp"
        android:layout_marginTop="240dp"
        android:rotationX="90"
        android:src="@drawable/wood" />

    <ImageView
        android:id="@+id/sung1"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="710dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/animsung1"
        android:rotationX="90" />

    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/word3_21"
            android:layout_width="400dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:src="@drawable/word3_21"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/bro2"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="170dp"
        android:rotationX="90"
        android:src="@drawable/bro2" />

    <ImageView
        android:id="@+id/bro1"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="380dp"
        android:rotationX="90"
        android:src="@drawable/bro1" />

    <ImageView
        android:id="@+id/meat1"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="620dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/animmeat"
        android:rotationX="90" />

    <ImageView
        android:id="@+id/fish"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="400dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/fish"
        android:rotationX="90" />

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="380dp">

        <ImageView
            android:id="@+id/word3_22"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/word3_22"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/animfish"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="280dp"
        android:background="@drawable/animfish" />

    <ImageView
        android:id="@+id/animfish1"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/animfish" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_back"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_next"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_pause" />

</RelativeLayout>
