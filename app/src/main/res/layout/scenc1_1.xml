<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scene1_1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_pause" />

    <ImageView
        android:id="@+id/box1_1"
        android:layout_width="650dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:rotationX="90"
        android:src="@drawable/box1_1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/book1" />

    <ImageView
        android:id="@+id/chair"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="100dp"
        android:rotationX="90"
        android:src="@drawable/chair" />

    <ImageView
        android:id="@+id/yotsawimon1"
        android:layout_width="180dp"
        android:layout_height="380dp"
        android:layout_alignTop="@+id/chair"
        android:layout_centerHorizontal="true"
        android:background="@drawable/animate_yotsawimon1_1"
        android:rotationX="90" />

    <ImageView
        android:id="@+id/jantawee1"
        android:layout_width="150dp"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/chair"
        android:background="@drawable/animate_jantawee1_1"
        android:rotationX="90" />

    <ImageView
        android:id="@+id/word2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/yotsawimon1"
        android:src="@drawable/word2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/word1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/jantawee1"
        android:src="@drawable/word1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/janta1"
        android:layout_width="150dp"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/chair"
        android:background="@drawable/animate_janta1_1"
        android:rotationX="90" />

    <ImageView
        android:id="@+id/word3"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/janta1"
        android:src="@drawable/word3"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_back"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_next"
        android:visibility="invisible" />

</RelativeLayout>
