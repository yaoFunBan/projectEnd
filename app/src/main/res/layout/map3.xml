<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.donnapa.fairytale.map3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/map3" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <ImageView
                android:id="@+id/mapsamon"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_marginLeft="285dp"
                android:layout_marginTop="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/mapsamon"/>

            <ImageView
                android:id="@+id/mapball"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="380dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="180dp"
                android:src="@drawable/mapball"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <ImageView
                android:id="@+id/mapfall"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/mapfall"/>

            <ImageView
                android:id="@+id/mapmalai"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="180dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="110dp"
                android:src="@drawable/mapmalai"/>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
