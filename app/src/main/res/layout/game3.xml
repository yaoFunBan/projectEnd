<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game3"
    tools:context="com.example.kimhuang.project.game3">

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_pause" />

    <ImageView
        android:layout_width="750dp"
        android:layout_height="550dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="270dp"
        android:background="@drawable/paper" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_toLeftOf="@+id/btn_pause"
        android:background="@drawable/score" />

    <!--<ImageView-->
    <!--android:layout_width="280dp"-->
    <!--android:layout_height="80dp"-->
    <!--android:background="@drawable/score"-->
    <!--android:layout_toLeftOf="@+id/btn_pause"/>-->

    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/quustion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Question"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/boxmess1"
        android:layout_width="620dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/boxmess">

        <TextView
            android:id="@+id/AnsTrue"
            android:layout_width="500dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="Answertrue"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/boxmess2"
        android:layout_width="620dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="630dp"
        android:background="@drawable/boxmess">

        <TextView
            android:id="@+id/AnsFalse"
            android:layout_width="500dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="Answerfalse"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/btn_pause"
        android:paddingTop="10dp"
        android:text="0"
        android:textColor="#ffff"
        android:textSize="50sp" />


    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp">

        <ProgressBar
            android:id="@+id/pbTimer"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="0"
            android:textColor="#000000"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="เวลา"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:text="วินาที"
            android:textColor="#CC0000"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!--<ImageView-->
    <!--android:id="@+id/mark"-->
    <!--android:layout_width="80dp"-->
    <!--android:layout_height="80dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginBottom="40dp" />-->
</RelativeLayout>
